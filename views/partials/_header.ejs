<header>
  <nav class="navbar navbar-expand-md navbar-dark" style="background-color: #2C353C;">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div>
      <% if(!username) { %>
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/login">Login</a>
          <a class="nav-item nav-link" href="/Register">Register</a>
        </div>
        <% } %>
          <% if(username) { %>
            <form class="form-inline my-2 my-lg-0 ml-auto" method="POST" action="/logout">
              <span class="navbar-text text-light mr-2">
                Logged in as: <%= username.email %>
              </span>
              <button type="submit" class="btn btn-outline-info my-2 my-sm-0">Log Out</button>
            </form>
            <% } %>
    </div>
  </nav>
</header>